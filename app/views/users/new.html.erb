<div class = 'text-center'>
<h1>Signup!</h1>
</div>
<%= form_for :user, url: users_path do |f| %>

  Username: <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
  Email: <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
  Password: <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>

  <%= f.submit "Submit", class: 'btn btn-primary' %>

<% end %>
